<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:keepScreenOn="true">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">
        <TextView
            android:drawableLeft="@drawable/beacon_gray"
            android:drawablePadding="40px"
            android:id="@+id/location_name"
            android:textSize="60px"
            android:text="Location Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            />
        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <TextView

                android:id="@+id/location_info"
                android:textSize="40px"
                android:paddingTop="10px"
                android:text="Some example location info text Some example location info text Some example location info text Some example location info text Some example location info text Some example location info text Some example location info text "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </ScrollView>
    </LinearLayout>

</FrameLayout>